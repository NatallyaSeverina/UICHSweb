@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <div>
        @using (Html.BeginForm("Index", "Home", FormMethod.Get, new { @class = "form-horizontal" }))
        {
            <h2>
                Форма
            </h2>

            <div class="form-group">
                <div class="col-md-8 col-md-offset-2 ">
                    <label>@Html.CheckBox("cb1")Чек-бокс 1</label><br />
                    <label>@Html.CheckBox("cb2")Чек-бокс 2</label><br />
                    <label>@Html.RadioButton("rb", 1, true)Радио-1</label>
                    <label>@Html.RadioButton("rb", 2, false)Радио-2</label>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-2">
                    <strong class="navbar-right " style="padding:5px">Логин:</strong>
                </div>
                <div class="col-md-8">
                    <label>@Html.TextBox("login", null, new { @class = "form-control", placeholder = "Введите логин" })</label>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-2">
                    <b class="navbar-right" style="padding:5px">Пароль:</b>
                </div>
                <div class="col-md-8">
                    <label>@Html.Password("password", null, new { @class = "form-control", placeholder = "Введите пароль" })</label>

                </div>
            </div>

            <div class="form-group">
                <div class="col-md-8 col-md-offset-3">
                    @Html.DropDownList("Colors", null, new { @class = "btn btn-info dropdown-toggle" })
                </div>
            </div>
            <div class="form-group">
                <div class=" col-md-8 col-md-offset-2">
                    <input type="submit" class="btn btn-default" value="Отправить" />
                </div>
            </div>

        }
    </div>
</body>
</html>
